- if flash[:notice]
  %p.alert.alert-success#notice= flash[:notice]
- elsif flash[:alert]
  %p.alert.alert-danger#alert= flash[:alert]

.jumbotron
  %h3
    %b Title:
    = product.title
  %h3
    %b Description:
    = product.description
  %h3
    %b Price:
    = product.price

  %h3
    %b Category:
    = product.category.name

%h3 Reviews
= render 'reviews/form'
= link_to 'Back', category_path(category.id), class: 'btn btn-primary'
- if user_signed_in?
  = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-primary'
- else
  %b Sign in to edit


= render reviews
