  - products.each do |product|
    %tr
      %td= product.title
      %td= product.description
      %td= product.price
      %td= link_to 'Show', category_product_path(category.id, product), class: 'btn btn-primary'
      %td= link_to 'Edit', edit_category_product_path(category.id, product), class: 'btn btn-primary'
      %td= link_to 'Destroy', category_product_path(category.id, product), class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' }

