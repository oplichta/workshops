%h1 Listing categories

%table.table
  %tr
    %th Name
    %th
    %th
    %th

  - categories.each do |category|
    %tr
      %td= category.name
      %td= link_to 'Show', category,class: "btn btn-primary"
      %td= link_to 'Edit', edit_category_path(category),class: "btn btn-primary"
      - if user_signed_in?
        %td= link_to 'Destroy', category,class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Category', new_category_path, class: "btn btn-primary"
